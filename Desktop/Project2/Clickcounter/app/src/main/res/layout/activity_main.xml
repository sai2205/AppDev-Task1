<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/myBg"
    tools:context="sai.clickcounter.MainActivity"
    android:background="#933c0359">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myTextTitle"
        android:text="@string/intro"
        android:layout_alignBottom="@+id/EditText"
        android:layout_toLeftOf="@+id/EditText"
        android:layout_alignTop="@+id/EditText"
        android:textColor="#f90a0a" />

    <EditText android:id="@+id/EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_above="@+id/addButton"
        android:layout_alignLeft="@+id/addButton"
        android:layout_alignStart="@+id/addButton"
        android:layout_alignRight="@+id/resetButton"
        android:layout_alignEnd="@+id/resetButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addone"
        android:id="@+id/addButton"
        android:nestedScrollingEnabled="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#f6720d" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:id="@+id/resetButton"
        android:layout_below="@+id/addButton"
        android:layout_centerHorizontal="true"
        android:background="#f27b0c" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadbutton"
        android:layout_below="@+id/resetButton"
        android:layout_centerHorizontal="true"
        android:text="load"
        android:background="#f48d07" />


</RelativeLayout>
